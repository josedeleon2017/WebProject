@model StoreModels.Models.mProductInventory

@{
    ViewData["Title"] = $"Edit Inventory - {ViewBag.Product.Name}";
}


<div class="row">
    <div class="col-6">
        <div class="pagetitle">
            <h1>@ViewData["Title"]</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Components</li>
                    <li class="breadcrumb-item active">Breadcrumbs</li>
                </ol>
            </nav>
        </div><!-- End Breadcrumbs with a page title -->
    </div>
</div>

<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="col-8">
                <h5><span class="text-muted">#@ViewBag.Product.ProductId</span> &nbsp; @ViewBag.Product.Name</h5>
                <p>
                    @ViewBag.Product.Description
                    <hr />
                    @ViewBag.Product.Specifications
                    <hr />
                    <span class="fw-bold">Cost: </span> $@ViewBag.Product.StandarCost.ToString("N2") &nbsp; <span class="fw-bold">Price:</span> $@ViewBag.Product.ListPrice.ToString("N2")
                </p>
            </div>
            <div class="col-4">
                <img src="@ViewBag.Product.ImagePath" height="200" width="200" />
            </div>
        </div>
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ProductId" class="form-control" type="hidden" />
                @*<div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>

                <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>*@
                <div class="form-group col-4">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="SafetyStockLevel" class="control-label"></label>
                    <input asp-for="SafetyStockLevel" class="form-control" />
                    <span asp-validation-for="SafetyStockLevel" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ReordePoint" class="control-label">ReorderPoint</label>
                    <input asp-for="ReordePoint" class="form-control" />
                    <span asp-validation-for="ReordePoint" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Inventory" asp-route-id="@Model.ProductId" class="btn btn-danger">Back to Inventory</a>
                </div>
            </form>
        </div>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
