@model StoreModels.Models.mEmployee

@{
    ViewData["Title"] = "Edit Employee";
}
<div class="row">
    <div class="col-sm-12 col-lg-6">
        <div class="pagetitle">
            <h1>@ViewData["Title"]</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Components</li>
                    <li class="breadcrumb-item active">Breadcrumbs</li>
                </ol>
            </nav>
        </div><!-- End Breadcrumbs with a page title -->
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EmployeeId" class="form-control" type="hidden" />
            <input asp-for="PhotoPath" class="form-control" type="hidden">
            <input asp-for="LoginId" class="form-control" type="hidden">
            @*<div class="form-group">
            <label asp-for="EmployeeId" class="control-label"></label>
            <input asp-for="EmployeeId" class="form-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>*@
            @*<input asp-for="RoleId" class="form-control" hidden />*@
            @*<div class="form-group">
            <label asp-for="RoleId" class="control-label"></label>
            <input asp-for="RoleId" class="form-control" />
            <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="control-label">Role</label>
                <div class="row">
                    <div class="col-6 justify-content-center">
                        <div class="form-check">
                            @if(Model.RoleId == 2)
                            {
                                <input type="radio" asp-for="RoleId" value="2" class="form-check-input" checked>
                            }
                            <input type="radio" asp-for="RoleId" value="2" class="form-check-input">
                            @*name="gridRadios" id="gridRadios1"*@
                            <label class="form-check-label" for="gridRadios1">
                                Admin
                            </label>
                        </div>
                    </div>
                    <div class="col-6 justify-content-center">
                        <div class="form-check">
                            @if (Model.RoleId == 1)
                            {
                                <input type="radio" asp-for="RoleId" value="1" class="form-check-input" checked>
                            }
                            <input type="radio" asp-for="RoleId" value="1" class="form-check-input">
                            @* name="gridRadios" id="gridRadios2" *@
                            <label class="form-check-label" for="gridRadios2">
                                Employee
                            </label>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="LoginId" class="control-label"></label>
                    <input asp-for="LoginId" class="form-control" disabled />
                    <span asp-validation-for="LoginId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NationalNumberId" class="control-label"></label>
                <input asp-for="NationalNumberId" class="form-control" />
                <span asp-validation-for="NationalNumberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="control-label">Gender</label>
                <div class="row">
                    <div class="col-6 justify-content-center">
                        <div class="form-check">
                            @if (Model.Gender == "M")
                            {
                                <input type="radio" asp-for="Gender" value="M" class="form-check-input" checked>
                            }
                            <input type="radio" asp-for="Gender" value="M" class="form-check-input">
                            @*name="gridRadios" id="gridRadios1"*@
                            <label class="form-check-label" for="gridRadios1">
                                Male
                            </label>
                        </div>
                    </div>
                    <div class="col-6 justify-content-center">
                        <div class="form-check">
                            @if (Model.Gender== "F")
                            {
                                <input type="radio" asp-for="Gender" value="F" class="form-check-input" checked>
                            }
                            <input type="radio" asp-for="Gender" value="F" class="form-check-input">
                            @* name="gridRadios" id="gridRadios2" *@
                            <label class="form-check-label" for="gridRadios2">
                                Female
                            </label>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="PhotoFileName" class="control-label"></label>
            <input asp-for="PhotoFileName" class="form-control" />
            <span asp-validation-for="PhotoFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="PhotoExtension" class="control-label"></label>
            <input asp-for="PhotoExtension" class="form-control" />
            <span asp-validation-for="PhotoExtension" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <input type="file" asp-for="PhotoPath" class="form-control"> @*id="photoE"*@
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <input asp-for="PhotoPath" class="form-control" />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>*@
            <div class="form-group pt-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-danger">Back to Panel</a>
            </div>
        </form>
    </div>
    <div class="col-sm-6 col-md-8 d-flex justify-content-center align-items-center py-4">

        <img src="@Model.PhotoPath" alt="..." id="previewE" height="200" width="200">

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(() => {
            $("#PhotoPath").change(function () {
                const file = this.files[0];
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $("#previewE")
                            .attr("src", event.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });

    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
