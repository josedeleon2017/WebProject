                        eu gravida nibh condimentum ut.
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid pt-3">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <!-- Card with an image on top -->
                <div class="card h-100">
                    <img src="@item.ImagePath" class="card-img-top w-100 pt-3 animate__animated animate__zoomIn" alt="...">
                    <div class="card-body pb-0">
                        <h5 class="card-title">@item.Name</h5>
                        @*<h6 class="text-muted fw-bold">@item.ListPrice</h6>
                    <p class="card-text">@item.Specifications</p>*@
                        <p class="card-text">$@Html.DisplayFor(model => item.ListPrice)</p>
                        <div class="row w-100">
                            <a asp-action="Detail" asp-route-id="@item.ProductId" class="col px-0">
                                <div class="small text-center">
                                    <i class="bi bi-eye-fill"></i>&nbsp; Preview
                                </div>
                            </a>
                            @*<a href="#" class="col px-0">
                        <div class="small text-center">
                        <i class="bi bi-cart-fill"></i>&nbsp; Add To Cart
                        </div>
                        </a>*@
                        </div>
                    </div>
                </div><!-- End Card with an image on top -->
            </div>

        }
    </div>
</div>              