@model IEnumerable<ClasificacionPeliculas.Models.Vote>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Votar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pi.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowCreationTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            <td>
                @Html.DisplayFor(modelItem => item.Pi.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movies.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RowCreationTime)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
