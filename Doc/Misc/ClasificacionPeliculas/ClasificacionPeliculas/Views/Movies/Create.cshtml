@model ClasificacionPeliculas.Models.Movie

@{
    ViewData["Title"] = "Crear película";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <form asp-action="Create">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <div class="row">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="ReleaseDate" class="control-label"></label>
                                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Duration" class="control-label"></label>
                                    <input asp-for="Duration" class="form-control" type="number" step="5" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Director" class="control-label"></label>
                                    <input asp-for="Director" class="form-control" />
                                    <span asp-validation-for="Director" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Actors" class="control-label"></label>
                                    <input asp-for="Actors" class="form-control" />
                                    <span asp-validation-for="Actors" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Plot" class="control-label"></label>
                                    <input asp-for="Plot" class="form-control" />
                                    <span asp-validation-for="Plot" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Rating" class="control-label"></label>
                                    <input asp-for="Rating" class="form-control" type="number" max="99.9" step="0.1" />
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="Votes" class="control-label"></label>
                                    <input asp-for="Votes" class="form-control" type="number" step="1" />
                                    <span asp-validation-for="Votes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="PosterUrl" class="control-label"></label>
                                    <input asp-for="PosterUrl" class="form-control" />
                                    <span asp-validation-for="PosterUrl" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-lg-6 col-sm-12">
                                    <label asp-for="ImdbId" class="control-label"></label>
                                    <input asp-for="ImdbId" class="form-control" />
                                    <span asp-validation-for="ImdbId" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Crear" class="btn btn-primary" /> <a asp-action="Index" class="btn btn-danger">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
